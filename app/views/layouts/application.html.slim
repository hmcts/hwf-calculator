- content_for :head
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application'
- content_for :body_end
  javascript:
    var showHideContent = new GOVUK.ShowHideContent();
    showHideContent.init();
  yield
- content_for :content
  .direction-ltr#content
    main role="main"
      .grid-row
        .column-full
          .phase-banner
            .grid-row
              .column-one-half
                p
                  strong.phase-tag Beta
              .column-one-half.right
                p.welsh-link role="note" aria-label="Information" data-behavior="welsh_link"
                  = t('language_switcher.full_html', link_html: link_to(t('language_switcher.link_text'), locale: t('language_switcher.switch')))
          .content-header
            h1.heading-large data-behavior="heading" = t('calculation.common.page_header')

          = yield
= render template: "layouts/govuk_template"