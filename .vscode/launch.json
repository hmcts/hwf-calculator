{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Listen for rdebug-ide",
            "type": "Ruby",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "remoteHost": "127.0.0.1",
            "remotePort": "1234",
            "remoteWorkspaceRoot": "${workspaceRoot}"
        },
        {
            "name": "Listen for rdebug-ide docker",
            "type": "Ruby",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "remoteHost": "127.0.0.1",
            "remotePort": "1234",
            "remoteWorkspaceRoot": "/app"
        },
        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server"
            ]
        },
        {
            "name": "RSpec - all (English)",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "~/.rvm/gems/ruby-2.3.3/bin/rspec",
            "args": [
                "-I",
                "${workspaceRoot}",
                "spec/features/view_savings_and_investments_content_spec.rb"                
            ]
        },
        {
            "name": "RSpec - all (Welsh)",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "~/.rvm/gems/ruby-2.3.3/bin/rspec",
            "args": [
                "-I",
                "${workspaceRoot}",
                "spec/features/view_savings_and_investments_content_spec.rb"                
            ],
            "env": {
                "TEST_LOCALE": "cy"
            }
        },
        {
            "name": "RSpec - active spec file only (english)",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "~/.rvm/gems/ruby-2.3.3/bin/rspec",
            "args": [
                "-I",
                "${workspaceRoot}",
                "${file}"
            ]
        },
        {
            "name": "RSpec - active spec file only (welsh)",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "~/.rvm/gems/ruby-2.3.3/bin/rspec",
            "args": [
                "-I",
                "${workspaceRoot}",
                "${file}"
            ],
            "env": {
                "TEST_LOCALE": "cy"
            }
        },
        {
            "name": "Cucumber",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "~/.rvm/gems/ruby-2.3.3/bin/cucumber"
        }
    ]
}